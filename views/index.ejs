<!DOCTYPE html>
<html>
<head>
  <title>
    <%= title %>
  </title>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/css/bootstrap.min.css" rel="stylesheet">
  <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.js"></script>
  <script src="http://netdna.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.js"></script>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>

  <!-- form links -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
</head>

  <body>

  <nav class="navbar navbar-dark bg-dark">
    <!-- Navbar summary -->
    <h3>
      <a href="/" id="home-links">The Business World 
        <img src="images/BW-logo.jpg" alt="Logo">
      </a>
    </h3>

    <div class="other-links">
      <a href="archives" id="pages-links">Archives</a>
      <a href="contactUs" id="pages-links">ContactUS</a>
      <a href="new" id="pages-links">NewBlog</a>
      <a href="signIn" id="pages-links">SignIn</a>
    </div>
   
      <ul class="list-unstyled">
        <li>
          <button data-placement="bottom" data-toggle="popover" data-title="Login" data-container="body" type="button" data-html="true"
            href="#" id="login" class="logIn">
            <img src="images/LogIn-icon.svg" width="10%" class="logIn-icon">LogIn</button>
        </li>
        <div id="popover-content" class="hide">
          <form class="form-inline" role="form" method="POST">
            <div class="form-group">
              <input type="text" placeholder="Username" class="form-control" required="required" name="username">
              <br>
              <br>
              <input type="password" placeholder="password" class="form-control" required="required" name="password">
              <br>
              <br>
              <button type="submit" class="btn btn-primary">LogIn</button>
            </div>
          </form>
        </div>
      </ul>
  </nav>

<div class="container">
    
  <center>
  <h1><%= title %></h1>
    <h4>Welcome to
      <%= title %>
    </h4>
  </center>
  
  <div class="jumbotron"></div>

  <div class="row">
    <% if (posts !=0) { %>
    
    
      <% posts.forEach(function(post){ %>
  
        <div class="col-xs-12 col-md-6 col-lg-4">

              <div class="card" style="height: 100%;">

                <img class="card-img-top" src="<%= post.image %>"
                  alt="Card image cap" style="padding: 5px; width: 100%; height: 300px">

                <div class="card-body">

                  <h5 class="card-title">
                    <%= post.title %>
                  </h5>

                  <p class="card-text"><%-post.summary%></p>
                  <p class="card-text">Author:<%= post.author%></p>
                  <p class="card-text">Time:<%= post.time%></p>
                  <p class="card-text">Date:<%= post.date%></p>

                  <a href="/full-blog/<%= post.id%>" class="btn btn-primary">Read Full Story</a>


                </div>

              </div>
        </div>

        <% }); %>
    
    
          <% } %>
  </div>

</div>

</div>
<script>
  $("[data-toggle=popover]").popover({
    html: true,
    content: function () {
      return $('#popover-content').html();
    }
  });
</script>
  </body>
</html>
